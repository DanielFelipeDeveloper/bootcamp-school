{% extends 'layout.njk' %}

{% block content %}
<div class="card">
  <section class="avatar" 
  style="background: url(https://source.unsplash.com/collection/489203/500x500) no-repeat center center / cover "
  >
  </section>
  <section class="details">

    <h3>Detalhes</h3>

    <div class="item">
      <div>Nome</div>
      <div>{{teacher.name}}</div>
    </div>

    <div class="item">
      <div>Idade</div>
      <div>{{teacher.age}}</div>
    </div>
    
    <div class="item">
      <div>Grau de Escolaridade</div>
      <div>{{teacher.graduation}}</div>
    </div>

    <div class="item">
      <div>Tipo de Aula</div>
      <div>{{teacher.typeClass}}</div>
    </div>

    <div class="item">
      <div>Acompanhamento</div>
      {% for accompaniment in teacher.accompaniment %}
      <span>{{accompaniment}}</span>
      {% endfor %}
    </div>

    <div class="item">
      <div>Desde</div>
      <div>{{teacher.created_at}}</div>
    </div>

  </section>
</div>
{% endblock content %}