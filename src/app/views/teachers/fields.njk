<div class="item">
  <div>Avatar url</div>
  <input 
    type="url" 
    name="avatar_url" 
    placeholder="https://"
    value="{{ teacher.avatar_url }}"
  >
</div>

<div class="item">
  <div>Nome</div>
  <input 
    type="text"
    name="name" 
    value="{{ teacher.name }}"
  >
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <input 
    type="date" 
    name="birth"
    value="{{ teacher.birth }}"
  >
</div>

<div class="item">
  <div>Grau de Escolaridade</div>
  <select name="graduation">
    <option value="medio">Ensino Médio Completo</option>
    <option value="superior">Ensino Superior Completo</option>
    <option value="mestre">Mestrado</option>
    <option value="doutor">Doutorado</option>
  </select>
</div>

<div class="item">
  <div>Tipo de aula</div>
  <div>
    <span>
      <input 
        type="radio" 
        name="typeClass" 
        value="presencial" 
        {% if teacher.typeClass == 'presencial' %}
        checked
        {% endif %}
      >Presencial
    </span>
    <span>
      <input 
        type="radio" 
        name="typeClass" 
        value="EAD"
        {% if teacher.typeClass == 'EAD' %}
        checked
        {% endif %}
      >À distância
    </span>
  </div>
</div>

<div class="item">
  <div>Area de Atuação</div>
  <input 
    type="text" 
    name="accompaniment" 
    placeholder="Separe as áreas de atuação por virgula ','"
    value="{{ teacher.accompaniment }}"
  >
</div>

<button type="submit">Salvar</button>